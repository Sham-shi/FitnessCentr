<UserControl
    x:Class="FitnessCentrApp.Views.UserControls.Base.CrudView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FitnessCentrApp.Views.Converters"
    xmlns:ctk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/communitytoolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessCentrApp.Views.UserControls.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:ItemEqualsConverter x:Key="ItemEqualsConverter" />
        <conv:StringToImageConverter x:Key="StringToImageConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  DataGrid  -->
        <DataGrid
            x:Name="DataGridAuto"
            Grid.Row="0"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="DataGridAuto_AutoGeneratingColumn"
            BeginningEdit="DataGridAuto_BeginningEdit"
            CanUserAddRows="False"
            IsReadOnly="{Binding IsReadOnly}"
            ItemsSource="{Binding Items}"
            LoadingRow="DataGridAuto_LoadingRow"
            SelectedItem="{Binding SelectedItem}"
            GridLinesVisibility="All">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <ui:MenuItem
                        Command="{Binding EditCommand}"
                        Header="Редактировать"
                        IsEnabled="{Binding IsSEditEnabled}">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Edit24" />
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                    <ui:MenuItem
                        Command="{Binding DeleteCommand}"
                        Header="Удалить"
                        IsEnabled="{Binding IsSEditEnabled}">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Delete24" />
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <ui:Button
                Name="CteateButton"
                Margin="5"
                Command="{Binding CreateCommand}"
                Content="Добавить"
                IsEnabled="{Binding IsSEditEnabled}" />
            <ui:Button
                Name="EditButton"
                Margin="5"
                Command="{Binding EditCommand}"
                Content="Редактировать"
                IsEnabled="{Binding IsSEditEnabled}" />
            <ui:Button
                Name="SaveButton"
                Margin="5"
                Command="{Binding SaveCommand}"
                Content="Сохранить"
                IsEnabled="{Binding IsSaveEnabled}" />
            <ui:Button
                Name="CancelButton"
                Margin="5"
                Command="{Binding RefreshCommand}"
                Content="Отменить"
                IsEnabled="{Binding IsSaveEnabled}" />
            <ui:Button
                Name="DeleteButton"
                Margin="5"
                Command="{Binding DeleteCommand}"
                Content="Удалить"
                IsEnabled="{Binding IsSEditEnabled}" />
            <ui:Button
                Name="RefreshButton"
                Margin="150,5,5,5"
                Command="{Binding RefreshCommand}"
                Content="Обновить список" />
        </StackPanel>

        <ui:InfoBar
            Name="StatusBar"
            Grid.Row="2"
            Height="30"
            Margin="0,10,0,0" />
    </Grid>
</UserControl>
