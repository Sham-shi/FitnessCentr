<UserControl
    x:Class="FitnessCentrApp.Views.UserControls.Base.CrudView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FitnessCentrApp.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessCentrApp.Views.UserControls.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:ItemEqualsConverter x:Key="ItemEqualsConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  DataGrid  -->
        <DataGrid
            x:Name="DataGridAuto"
            Grid.Row="0"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="DataGridAuto_AutoGeneratingColumn"
            BeginningEdit="DataGridAuto_BeginningEdit"
            CanUserAddRows="False"
            IsReadOnly="{Binding IsReadOnly}"
            ItemsSource="{Binding Items}"
            LoadingRow="DataGridAuto_LoadingRow"
            SelectedItem="{Binding SelectedItem}" >
            <!--CellEditEnding="DataGridAuto_CellEditEnding"-->
            
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Command="{Binding EditCommand}"
                        Header="Редактировать"
                        IsEnabled="{Binding IsSEditEnabled}" />
                    <MenuItem
                        Command="{Binding DeleteCommand}"
                        Header="Удалить"
                        IsEnabled="{Binding IsSEditEnabled}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="CteateButton"
                Margin="5"
                Command="{Binding CreateCommand}"
                Content="Добавить"
                IsEnabled="{Binding IsSEditEnabled}" />
            <Button
                Name="EditButton"
                Margin="5"
                Command="{Binding EditCommand}"
                Content="Редактировать"
                IsEnabled="{Binding IsSEditEnabled}" />
            <Button
                Name="SaveButton"
                Margin="5"
                Command="{Binding SaveCommand}"
                Content="Сохранить"
                IsEnabled="{Binding IsSaveEnabled}" />
            <Button
                Name="CancelButton"
                Margin="5"
                Command="{Binding RefreshCommand}"
                Content="Отменить"
                IsEnabled="{Binding IsSaveEnabled}" />
            <Button
                Name="DeleteButton"
                Margin="5"
                Command="{Binding DeleteCommand}"
                Content="Удалить"
                IsEnabled="{Binding IsSEditEnabled}" />
            <Button
                Name="RefreshButton"
                Margin="150,5,5,5"
                Command="{Binding RefreshCommand}"
                Content="Обновить список" />
        </StackPanel>

        <StatusBar
            Name="StatusBar"
            Grid.Row="2"
            Height="30"
            Margin="0,10,0,0" />
    </Grid>
</UserControl>
