<UserControl x:Class="FitnessCentrApp.Views.UserControls.Base.CrudView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessCentrApp.Views.UserControls.Base"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid x:Name="DataGridAuto"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="True"
                  IsReadOnly="{Binding IsReadOnly}"
                  CanUserAddRows="False"
                  AutoGeneratingColumn="DataGridAuto_AutoGeneratingColumn"
                  BeginningEdit="DataGridAuto_BeginningEdit"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button Name="CteateButton" Content="Создать" Command="{Binding CreateCommand}" Margin="5"/>
            <Button Name="EditButton" Content="Редактировать" Command="{Binding EditCommand}" Margin="5"/>
            <Button Name="SaveButton" Content="Сохранить" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Name="UpdateButton" Content="Сохранить изменения" Command="{Binding UpdateCommand}" Margin="5"/>
            <Button Name="DeleteButton" Content="Удалить" Command="{Binding DeleteCommand}" Margin="5"/>
            <Button Name="RefreshButton" Content="Обновить список" Command="{Binding RefreshCommand}" Margin="150 5 5 5"/>
        </StackPanel>
    </Grid>
</UserControl>
