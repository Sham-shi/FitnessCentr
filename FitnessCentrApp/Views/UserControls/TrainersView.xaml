<UserControl
    x:Class="FitnessCentrApp.Views.UserControls.TrainersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessCentrApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FitnessCentrApp.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Список тренеров  -->
        <DataGrid
            Grid.Row="0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="False"
            ItemsSource="{Binding Trainers}"
            SelectedItem="{Binding SelectedTrainer}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding TrainerID}"
                    Header="ID"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding BranchID}"
                    Header="Филиал ID"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding FullName}"
                    Header="ФИО"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Phone}"
                    Header="Телефон"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Email}"
                    Header="Email"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Specialization}"
                    Header="Специализация"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Education}"
                    Header="Образование"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding WorkExperience}"
                    Header="Опыт"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding SportsAchievements}"
                    Header="Достижения"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Salary}"
                    Header="Зарплата"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding PhotoPath}"
                    Header="Фото (путь)"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Добавление нового тренера  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <!--<TextBox
                Text="{Binding NewTrainer.FullName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Text="{Binding NewTrainer.Phone, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Text="{Binding NewTrainer.Email, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Text="{Binding NewTrainer.Specialization, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Text="{Binding NewTrainer.Salary, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox
                Margin="0,5,0,5"
                DisplayMemberPath="BranchName"
                ToolTip="Филиал"
                ItemsSource="{Binding Branches}"
                SelectedValue="{Binding NewTrainer.BranchID}"
                SelectedValuePath="BranchId" />-->

            <StackPanel
                Margin="0,5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding CreateCommand}"
                    Content="Создать" />
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding SaveCommand}"
                    Content="Сохранить" />
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding UpdateCommand}"
                    Content="Обновить" />
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding DeleteCommand}"
                    Content="Удалить" />
                <Button
                    Width="150"
                    Margin="5"
                    Command="{Binding RefreshCommand}"
                    Content="Обновить список" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
