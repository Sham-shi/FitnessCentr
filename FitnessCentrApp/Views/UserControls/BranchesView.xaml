<UserControl
    x:Class="FitnessCentrApp.Views.UserControls.BranchesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessCentrApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FitnessCentrApp.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="False"
            ItemsSource="{Binding Branches}"
            SelectedItem="{Binding SelectedBranch}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding BranchID}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding BranchName}"
                    Header="Фиилал"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Address}"
                    Header="Адрес"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Phone}"
                    Header="Телефон"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Binding="{Binding Email}"
                    Header="Email"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <Button
                Width="120"
                Margin="5"
                Command="{Binding CreateCommand}"
                Content="Создать" />
            <Button
                Width="120"
                Margin="5"
                Command="{Binding SaveCommand}"
                Content="Сохранить" />
            <Button
                Width="120"
                Margin="5"
                Command="{Binding UpdateCommand}"
                Content="Обновить" />
            <Button
                Width="120"
                Margin="5"
                Command="{Binding DeleteCommand}"
                Content="Удалить" />
            <Button
                Width="150"
                Margin="5"
                Command="{Binding RefreshCommand}"
                Content="Обновить список" />
        </StackPanel>
    </Grid>
</UserControl>
